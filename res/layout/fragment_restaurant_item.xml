<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_res"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_res"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/tv_miles"
        android:layout_toRightOf="@id/img_res"
        android:text="Restaurant Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/tv_ratings"
        android:layout_toRightOf="@id/img_res"
        android:text="Res Information" />

    <TextView
        android:id="@id/tv_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_name"
        android:layout_margin="5dp"
        android:text="1.0 mi" />

    <TextView
        android:id="@id/tv_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_body"
        android:layout_alignBottom="@+id/tv_body"
        android:layout_alignRight="@+id/tv_miles"
        android:layout_margin="5dp"
        android:text="3.5/5" />

</RelativeLayout>